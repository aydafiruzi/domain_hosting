# .env
# PostgreSQL Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=domain_system
DB_USER=your_username
DB_PASSWORD=your_secure_password

DB_ECHO=False
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# API Settings
API_HOST=0.0.0.0
API_PORT=5000
DEBUG=True

# Namecheap API
NAMECHEAP_API_USER=your_api_user
NAMECHEAP_API_KEY=your_api_key
NAMECHEAP_SANDBOX=True

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=domain_system.log